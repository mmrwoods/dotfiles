[apply]
  whitespace = fix
[core]
  editor = vim
  autocrlf = input
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes
  # warn about tabs and trailing spaces
  whitespace = space-before-tab,tab-in-indent,trailing-space
[color]
  ui = true
[branch]
  # pull with rebase by default on new tracking branches
  autosetuprebase = always
[branch "master"]
  # pull with rebase by default on master
  rebase = true
[branch "develop"]
  # pull with rebase by default on develop
  rebase = true
[advice]
  # disable how to stage/unstage/add advice from git status
  statusHints = false
  # disable hints when pushing something not fast-forwardable
  pushNonFastForward = false
[push]
  # push the current branch to its upstream branch by default
  default = tracking
[diff]
  # allow git diff to detect renames and copies
  renames = copies
[merge]
  # show diffstat at the end of a merge
  stat = true
[alias]
  la = "!git config -l | grep alias | cut -c 7-" # list all aliases
  aa = add -a
  au = add -u
  ap = add -p
  br = branch
  ba = branch -a
  ci = commit -v
  co = checkout
  cb = checkout -b
  cp = cherry-pick
  df = diff
  dc = diff --cached
  dw = diff --word-diff
  pr = pull --rebase
  po = push origin
  st = status
  sh = show
  rs = reset
  rs1 = reset HEAD^
  rs2 = reset HEAD^^
  rsh1 = reset --hard HEAD^
  rsh2 = reset --hard HEAD^^
  l1 = log --oneline
  ls = log --pretty=format:'%C(yellow)%h %Creset%s %C(green)(%ad) %Cblue<%cn>%C(cyan)%d' --decorate --date=relative
  lg = log --pretty=format:'%C(yellow)%h %Creset%s %C(green)(%ad) %Cblue<%cn>%C(cyan)%d' --decorate --date=relative --graph --all
  mru = for-each-ref --count=10 --sort=-authordate --format='%(color:yellow)%(refname:short) %(color:reset)%(subject) %(color:green)(%(authordate:relative)) %(color:blue)<%(authorname)> %(color:cyan)%(upstream:short)' refs/heads
  amend = commit --amend
  branches = branch -vv
  heads = for-each-ref --sort=-authordate --format='%(color:yellow)%(refname:short) %(color:reset)%(subject) %(color:green)(%(authordate:relative)) %(color:blue)<%(authorname)> %(color:cyan)%(upstream:short)' refs/heads
  tags = for-each-ref --sort=-taggerdate --format='%(color:yellow)%(refname:short) %(color:reset)%(subject) %(color:green)(%(taggerdate:relative)) %(color:blue)<%(taggername)>' refs/tags
  remotes = for-each-ref --sort=-authordate --format='%(color:yellow)%(refname:short) %(color:reset)%(subject) %(color:green)(%(authordate:relative)) %(color:blue)<%(authorname)> %(color:cyan)%(upstream:short)' refs/remotes
